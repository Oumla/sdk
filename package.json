{
  "name": "@oumla/sdk-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Oumla SDK Workspace - Multi-language SDKs for blockchain integration",
  "workspaces": [
    "sdks/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "generate": "fern generate",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "publish:manual": "echo 'Use: cd sdks/typescript && npm publish'",
    "publish:sdk": "cd sdks/typescript && npm publish",
    "build:sdk": "cd sdks/typescript && pnpm run build",
    "dev:sdk": "cd sdks/typescript && pnpm run dev",
    "dev": "vitest",
    "ci": "pnpm run lint && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^18.14.0",
    "fern": "^0.0.19",
    "tsup": "^6.7.0",
    "typescript": "5.0.4",
    "vitest": "^1.1.3",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "blockchain",
    "sdk",
    "workspace",
    "oumla",
    "multi-language"
  ],
  "author": "Mohammed aljasser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oumla/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/oumla/sdk/issues"
  },
  "homepage": "https://docs.oumla.com"
}